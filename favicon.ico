<svg width="200" height="200" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
  <!-- Background transparent -->
  
  <!-- Heart Balloon 1 (Left) -->
  <g transform="translate(30, 20)">
    <path d="M 40 20 C 40 10, 30 5, 20 10 C 10 5, 0 10, 0 20 C 0 30, 20 50, 20 50 C 20 50, 40 30, 40 20 Z" 
          fill="#E91E63" 
          stroke="#C2185B" 
          stroke-width="1"
          opacity="0.95">
      <animate attributeName="opacity" values="0.95;1;0.95" dur="3s" repeatCount="indefinite"/>
    </path>
    <!-- Highlight -->
    <ellipse cx="15" cy="25" rx="8" ry="10" fill="rgba(255,255,255,0.4)"/>
  </g>
  
  <!-- Heart Balloon 2 (Center) -->
  <g transform="translate(70, 15)">
    <path d="M 40 20 C 40 10, 30 5, 20 10 C 10 5, 0 10, 0 20 C 0 30, 20 50, 20 50 C 20 50, 40 30, 40 20 Z" 
          fill="#E91E63" 
          stroke="#C2185B" 
          stroke-width="1.5"
          opacity="1">
      <animate attributeName="opacity" values="1;0.95;1" dur="3s" repeatCount="indefinite"/>
    </path>
    <!-- Golden ribbon detail -->
    <path d="M 20 15 L 20 45" 
          stroke="#D4AF37" 
          stroke-width="2" 
          stroke-linecap="round"/>
    <!-- Highlight -->
    <ellipse cx="15" cy="25" rx="8" ry="10" fill="rgba(255,255,255,0.5)"/>
  </g>
  
  <!-- Heart Balloon 3 (Right) -->
  <g transform="translate(110, 20)">
    <path d="M 40 20 C 40 10, 30 5, 20 10 C 10 5, 0 10, 0 20 C 0 30, 20 50, 20 50 C 20 50, 40 30, 40 20 Z" 
          fill="#E91E63" 
          stroke="#C2185B" 
          stroke-width="1"
          opacity="0.95">
      <animate attributeName="opacity" values="0.95;1;0.95" dur="3s" repeatCount="indefinite"/>
    </path>
    <!-- Highlight -->
    <ellipse cx="15" cy="25" rx="8" ry="10" fill="rgba(255,255,255,0.4)"/>
  </g>
  
  <!-- Golden strings tied together -->
  <g transform="translate(100, 140)">
    <!-- Bow knot -->
    <circle cx="0" cy="0" r="3" fill="#D4AF37"/>
    <path d="M -5 -3 Q -8 -5, -10 -3 Q -8 -1, -5 -3" fill="#D4AF37" opacity="0.8"/>
    <path d="M 5 -3 Q 8 -5, 10 -3 Q 8 -1, 5 -3" fill="#D4AF37" opacity="0.8"/>
    
    <!-- Strings -->
    <line x1="-8" y1="3" x2="-15" y2="20" stroke="#D4AF37" stroke-width="1.5" stroke-linecap="round"/>
    <line x1="0" y1="3" x2="0" y2="20" stroke="#D4AF37" stroke-width="1.5" stroke-linecap="round"/>
    <line x1="8" y1="3" x2="15" y2="20" stroke="#D4AF37" stroke-width="1.5" stroke-linecap="round"/>
    
    <!-- Curled ends -->
    <path d="M -15 20 Q -18 22, -15 24" stroke="#D4AF37" stroke-width="1.5" fill="none" stroke-linecap="round"/>
    <path d="M 15 20 Q 18 22, 15 24" stroke="#D4AF37" stroke-width="1.5" fill="none" stroke-linecap="round"/>
  </g>
  
  <!-- Sparkles -->
  <g opacity="0.8">
    <!-- Large sparkles -->
    <g transform="translate(15, 60)">
      <path d="M 0 -5 L 2 0 L 0 5 L -2 0 Z M -5 0 L 0 2 L 5 0 L 0 -2 Z" fill="#D4AF37"/>
    </g>
    <g transform="translate(170, 80)">
      <path d="M 0 -4 L 1.5 0 L 0 4 L -1.5 0 Z M -4 0 L 0 1.5 L 4 0 L 0 -1.5 Z" fill="#D4AF37"/>
    </g>
    <g transform="translate(50, 150)">
      <path d="M 0 -3 L 1 0 L 0 3 L -1 0 Z M -3 0 L 0 1 L 3 0 L 0 -1 Z" fill="#D4AF37"/>
    </g>
    
    <!-- Small sparkles -->
    <circle cx="25" cy="100" r="1.5" fill="#D4AF37"/>
    <circle cx="175" cy="50" r="1" fill="#D4AF37"/>
    <circle cx="30" cy="170" r="1.5" fill="#D4AF37"/>
    <circle cx="160" cy="160" r="1" fill="#D4AF37"/>
  </g>
</svg>
